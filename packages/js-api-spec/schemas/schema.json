      ],
      "additionalProperties": false,
      "examples": [
        "\n  \"since\": \"1.4.5\",\n  \"description\": \"Deprecated since 1.4.5, use something else instead :P.\"\n"
      ]
    },
    "stability": {
      "description": "Stability of the entity",
